<button type="@Type" class="@CssClass" style="width:105px" @onclick="@OnClick" title="@TooTip">
    <i class="@Icon" style="margin-right:5px;"></i><span>@TooTip</span>
</button>

@code {
    [Inject] private IStringLocalizer<Resource> Localizer { get; set; } = default!;
    [Parameter] public string Icon { get; set; } = "fa fa-trash";
    [Parameter] public string CssClass { get; set; } = "btn-shadow-danger";
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public string? TooTip { get; set; }
    [Parameter] public string Type { get; set; } = "button";


    protected override void OnInitialized()
    {
        TooTip ??= Localizer[nameof(Resource.ButtonDelete)];
    }
}