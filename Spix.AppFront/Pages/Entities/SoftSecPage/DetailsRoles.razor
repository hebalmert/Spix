@page "/usuarios/detailusuario/{Id:int}"
@attribute [Authorize(Roles = "Administrator")]

@if (Usuario is null || UsuarioRoles is null)
{
    <FullScreenSpinner IsVisible=true />
}
else
{
    <div class="container pt-4">
        <div class="card shadow-lg p-4 mb-5" style="border-radius: 12px;">
            <h3 class="mb-4">@Localizer[nameof(Resource.UserRole)]</h3>

            <h3>@Usuario!.FullName</h3>

            <div class="col-sm-12">
                <div class="row align-items-center mb-3">
                    <div class="col-md-3 d-flex justify-content-start">
                        <ButtonFormNew CssClass="btn btn-gradient-primary d-flex align-items-center gap-2" Style="width:130px" OnClick="() => ShowModalAsync()" />
                        <AnchorFormBack Style="width:130px" Href="@($"/usuarios")" />
                    </div>
                </div>
                <br />
            </div>

            <hr />
            <GenericList MyList="UsuarioRoles">
                <Body>
                    @if (UsuarioRoles is not null)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>@Localizer[nameof(Resource.Role)]</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in UsuarioRoles!)
                                    {
                                        <tr>
                                            <td>
                                                @item.UserType.ToString()
                                            </td>
                                            <td style="width:1px;">
                                                <button class="btn-shadow-danger" @onclick="() => DeleteAsync(item.UsuarioRoleId)">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                </Body>
            </GenericList>
            <!-- Tabla -->
            <hr />
            <!-- Paginación -->
            <Pagination CurrentPage="CurrentPage"
                        SelectedPage="SelectedPage"
                        TotalPages="TotalPages" />
        </div>
    </div>
}
