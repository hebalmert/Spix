@page "/frecuencies/detailfrecuencies/{Id:int}"
@attribute [Authorize(Roles = "Admin")]

@if (Frecuencies is null)
{
    <FullScreenSpinner IsVisible=true />
}
else
{
    <div class="container pt-4">
        <div class="card shadow-lg p-4 mb-5" style="border-radius: 12px;">
            <h3 class="mb-4">@Localizer[nameof(Resource.Frecuencies)]</h3>

            <h3>@FrecuencyType!.TypeName</h3>

            <div class="col-sm-12">
                <div class="row align-items-center mb-3">
                    <div class="col-md-3 d-flex justify-content-start">
                        <ButtonFormNew CssClass="btn btn-gradient-primary d-flex align-items-center gap-2" Style="width:130px" OnClick="() => ShowModalAsync()" />
                        <AnchorFormBack Style="width:130px" Href="@($"/frecuencytypes")" />
                    </div>
                </div>
                <br />
            </div>

            <hr />
            <GenericList MyList="Frecuencies">
                <Body>

                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Localizer[nameof(Resource.Frecuency)]</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Frecuencies!)
                                {
                                    <tr>
                                        <td>
                                            @item.FrecuencyName
                                        </td>
                                        <td style="width:1px;">
                                            <ButtonEdit OnClick="() => ShowModalAsync(item.FrecuencyId, true)" />
                                        </td>
                                        <td style="width:1px;">
                                            <ButtonDelete OnClick="() => DeleteAsync(item.FrecuencyId)" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </Body>
            </GenericList>
            <!-- Tabla -->
            <hr />
            @if (Frecuencies is not null)
            {
                <!-- Paginación -->
                <Pagination CurrentPage="CurrentPage"
                            SelectedPage="SelectedPage"
                            TotalPages="TotalPages" />
            }
        </div>
    </div>


}
