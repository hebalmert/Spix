<EditForm Model="DocumentType" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />

    <div class="mb-0">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @Localizer[nameof(Resource.TypeDocument)]
            </span>
            <InputText class="form-control" @bind-Value="DocumentType.DocumentName" />
        </div>
        <ValidationMessage For="@(() => DocumentType.DocumentName)" />
    </div>

    <div class="mb-0">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @Localizer[nameof(Resource.Description)]
            </span>
            <InputTextArea class="form-control" @bind-Value="DocumentType.Descripcion" />
        </div>
        <ValidationMessage For="@(() => DocumentType.Descripcion)" />
    </div>

    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text" style="width: 150px">
                @Localizer[nameof(Resource.Active)]
            </span>
            <div class="d-flex align-items-center ps-3">
                <InputCheckbox @bind-Value="DocumentType.Active" class="form-check-input me-2" />
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="d-flex justify-content-center gap-3 mt-5">
        <ButtonFormSave />
        <ButtonFormBack OnClick="ReturnAction" />
    </div>
</EditForm>