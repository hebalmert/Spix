@page "/marks"
@attribute [Authorize(Roles = "Usuario")]

@if (Marks is null)
{
    <FullScreenSpinner IsVisible=true />
}
else
{
    <div class="container pt-4">
        <div class="card shadow-lg p-4 mb-5" style="border-radius: 12px;">
            <h3 class="mb-4">@Localizer[nameof(Resource.MarkEquipment)]</h3>

            <!-- Botón + Filtro -->
            <div class="row align-items-center mb-3">
                <div class="col-md-3 d-flex justify-content-start">
                    <button class="btn btn-gradient-primary d-flex align-items-center gap-2" style="width:130px" @onclick="() => ShowModalAsync()">
                        <i class="fa fa-plus-circle"></i> @Localizer[nameof(Resource.New)]
                    </button>
                </div>
                <div class="col-md-9 d-flex justify-content-end">
                    <FilterComponent ApplyFilter="SetFilterValue" />
                </div>
            </div>

            <hr />
            <GenericList MyList="Marks">
                <Body>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Localizer[nameof(Resource.MarkEquipment)]</th>
                                    <th>@Localizer[nameof(Resource.Models)]</th>
                                    <th>@Localizer[nameof(Resource.Active)]</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Marks!)
                                {
                                    <tr>
                                        <td>@item.MarkName</td>
                                        <td>@item.ModelNumber</td>
                                        <td>
                                            <input type="checkbox" class="form-check-input" checked="@item.Active" disabled />
                                        </td>
                                        <td style="width:1px;">
                                            <ButtonGeneric OnClick="() => ShowModalDetailsAsync(item.MarkId)" TooTip="@Localizer[nameof(Resource.Models)]"
                                                           Icon="fa fa-wifi" />
                                        </td>
                                        <td style="width:1px;">
                                            <ButtonEdit OnClick="() => ShowModalAsync(item.MarkId, true)" />
                                        </td>
                                        <td style="width:1px;">
                                            <ButtonDelete OnClick="() => DeleteAsync(item.MarkId)" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </Body>
            </GenericList>
            <!-- Tabla -->
            <hr />
            @if (Marks is not null)
            {
                <!-- Paginación -->
                <Pagination CurrentPage="CurrentPage"
                            SelectedPage="SelectedPage"
                            TotalPages="TotalPages" />
            }
        </div>
    </div>
}




<MudCardContent>
    <div class="shadow-lg mb-5">
        <MudCard Outlined="true">
            <MudCardContent>
                <h3>Marcas de Equipos</h3>

                <div class="col-sm-12">
                    <div class="row align-items-center">
                        <!-- Columna para el botón -->
                        <div class="col-md-3 d-flex justify-content-start">
                            <MudButton Variant="Variant.Filled"
                                       EndIcon="@Icons.Material.Filled.AddCircle"
                                       Color="Color.Dark" style="width:130px"
                                       OnClick="@(()=> ShowModalAsync())">
                                Marcas
                            </MudButton>
                        </div>
                        <!-- Columna para el filtro -->
                        <div class="col-md-9 d-flex justify-content-end">
                            <FilterComponent ApplyFilter="SetFilterValue" />
                        </div>
                    </div>
                    <br />
                </div>
                <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                <div class="row">
                    <div class="col-md-12 table-responsive">
                        <GenericList MyList="Marks">
                            <Body>
                                <MudSimpleTable Dense="true" Hover="true" Striped="true" Style="overflow-x: auto;">
                                    <thead>
                                        <tr>
                                            <th>Marcas</th>
                                            <th>Modelos</th>
                                            <th>Activo</th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Marks!)
                                        {
                                            <tr>
                                                <td>
                                                    @item.MarkName
                                                </td>
                                                <td>
                                                    @item.ModelNumber
                                                </td>
                                                <td>
                                                    <MudCheckBox @bind-Value="@item.Active" ReadOnly="true"></MudCheckBox>
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px;">
                                                    <MudFab Size="Size.Small"
                                                            EndIcon="@Icons.Material.Filled.Edit"
                                                            Color="Color.Dark"
                                                            OnClick="@(()=> ShowModalAsync(item.MarkId, true))">
                                                    </MudFab>
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px;">
                                                    <MudFab Size="Size.Small"
                                                            Href="@($"/marksmodels/details/{item.MarkId}")"
                                                            StartIcon="@Icons.Material.Filled.ManageAccounts"
                                                            Color="Color.Dark">
                                                    </MudFab>
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px;">
                                                    <MudFab Size="Size.Small"
                                                            EndIcon="@Icons.Material.Filled.Delete"
                                                            Color="Color.Error"
                                                            OnClick="@(()=> DeleteAsync(item.MarkId))">
                                                    </MudFab>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </MudSimpleTable>
                            </Body>
                        </GenericList>
                    </div>
                </div>
                <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                <Pagination CurrentPage="CurrentPage"
                            SelectedPage="SelectedPage"
                            TotalPages="TotalPages">
                </Pagination>
            </MudCardContent>
        </MudCard>
    </div>
</MudCardContent>


