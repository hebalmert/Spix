@page "/registers"
@attribute [Authorize(Roles = "Usuario")]

<MudCardContent>
    <div class="shadow-lg mb-5">
        <MudCard Outlined="true">
            <MudCardContent>
                <h3>Control de Registros</h3>

                <div class="col-sm-12">
                    <div class="row align-items-center">
                        <!-- Columna para el botón -->
                        <div class="col-md-3 d-flex justify-content-start">
                            <MudButton Variant="Variant.Filled"
                                       EndIcon="@Icons.Material.Filled.AddCircle"
                                       Color="Color.Dark" style="width:130px"
                                       OnClick="@(()=> ShowModalAsync())">
                                Registo
                            </MudButton>
                        </div>
                        <!-- Columna para el filtro -->
                        <div class="col-md-9 d-flex justify-content-end">
                            <FilterComponent ApplyFilter="SetFilterValue" />
                        </div>
                    </div>
                    <br />
                </div>
                <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                <div class="row">
                    <div class="col-md-12 table-responsive">
                        <GenericList MyList="Registers">
                            <Body>
                                <MudSimpleTable Dense="true" Hover="true" Striped="true" Style="overflow-x: auto;">
                                    <thead>
                                        <tr>
                                            <th>Contratos</th>
                                            <th>Solicitudes</th>
                                            <th>Cargue</th>
                                            <th>Egreso</th>
                                            <th>Adelantado</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Registers!)
                                        {
                                            <tr>
                                                <td>
                                                    @item.Contratos
                                                </td>
                                                <td>
                                                    @item.Solicitudes
                                                </td>
                                                <td>
                                                    @item.Cargue
                                                </td>
                                                <td>
                                                    @item.Egresos
                                                </td>
                                                <td>
                                                    @item.Adelantado
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px;">
                                                    <MudFab Size="Size.Small"
                                                            EndIcon="@Icons.Material.Filled.Edit"
                                                            Color="Color.Dark"
                                                            OnClick="@(()=> ShowModalAsync(item.RegisterId, true))">
                                                    </MudFab>
                                                </td>
                                                <td style="width:1px; padding-left:1px; padding-right:4px;">
                                                    <MudFab Size="Size.Small"
                                                            EndIcon="@Icons.Material.Filled.Delete"
                                                            Color="Color.Error"
                                                            OnClick="@(()=> DeleteAsync(item.RegisterId))">
                                                    </MudFab>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </MudSimpleTable>
                            </Body>
                        </GenericList>
                    </div>
                </div>
                <hr style="height:2px;border:none;color:#333;background-color:#333;" />
                <Pagination CurrentPage="CurrentPage"
                            SelectedPage="SelectedPage"
                            TotalPages="TotalPages">
                </Pagination>
            </MudCardContent>
        </MudCard>
    </div>
</MudCardContent>

