@page "/registers"
@attribute [Authorize(Roles = "Administrator")]

@if (Registers is null)
{
    <FullScreenSpinner IsVisible=true />
}
else
{
    <div class="container pt-4">
        <div class="card shadow-lg p-4 mb-5" style="border-radius: 12px;">
            <h3 class="mb-4">Control de Registros</h3>

            <!-- Botón + Filtro -->
            <div class="row align-items-center mb-3">
                <div class="col-md-3 d-flex justify-content-start">
                    <button class="btn btn-gradient-primary d-flex align-items-center gap-2" style="width:130px" @onclick="() => ShowModalAsync()">
                        <i class="fa fa-plus-circle"></i> Registro
                    </button>
                </div>
                <div class="col-md-9 d-flex justify-content-end">
                    <FilterComponent ApplyFilter="SetFilterValue" />
                </div>
            </div>

            <hr />
            <GenericList MyList="Registers">
                <Body>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Contratos</th>
                                    <th>Solicitudes</th>
                                    <th>Cargue</th>
                                    <th>Egresos</th>
                                    <th>Adelantado</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Registers!)
                                {
                                    <tr>
                                        <td>@item.Contratos</td>
                                        <td>@item.Solicitudes</td>
                                        <td>@item.Cargue</td>
                                        <td>@item.Egresos</td>
                                        <td>@item.Adelantado</td>
                                        <td style="width:1px;">
                                            <ButtonEdit OnClick="() => ShowModalAsync(item.RegisterId, true)" />
                                        </td>
                                        <td style="width:1px;">
                                            <ButtonDelete OnClick="() => DeleteAsync(item.RegisterId)" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </Body>
            </GenericList>

            <hr />
            <Pagination CurrentPage="CurrentPage"
                        SelectedPage="SelectedPage"
                        TotalPages="TotalPages" />
        </div>
    </div>
}
