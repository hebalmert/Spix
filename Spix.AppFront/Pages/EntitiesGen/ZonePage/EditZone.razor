@page "/zones/edit/{Id}"
@attribute [Authorize(Roles = "Usuario")]

@if (Zone is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <FormZone Zone="Zone"
                      IsEditControl="true"
                      OnSubmit="Edit"
                      ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}


