<EditForm Model="Tax" OnValidSubmit="OnSubmit">
    <DataAnnotationsValidator />

    <div class="row">
        <div class="col-md-12 mb-2">
            <div class="input-group">
                <span class="input-group-text" style="width: 150px">
                    @Localizer[nameof(Resource.Name)]
                </span>
                <InputText class="form-control" @bind-Value="Tax.TaxName" />
            </div>
            <ValidationMessage For="@(() => Tax.TaxName)" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-2">
            <div class="input-group">
                <span class="input-group-text" style="width: 150px">
                    @Localizer[nameof(Resource.Rate)]
                </span>
                <InputNumber class="form-control" @bind-Value="Tax.Rate" />
            </div>
            <ValidationMessage For="@(() => Tax.Rate)" />
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 mb-2">
            <div class="input-group">
                <span class="input-group-text" style="width: 150px">
                    @Localizer[nameof(Resource.Active)]
                </span>
                <div class="d-flex align-items-center ps-3">
                    <InputCheckbox @bind-Value="Tax.Active" class="form-check-input me-2" />
                </div>
            </div>
        </div>
    </div>

    <!-- Botones -->
    <div class="d-flex justify-content-center gap-3 mt-5">
        <ButtonFormSave />
        <ButtonFormBack OnClick="ReturnAction" />
    </div>
</EditForm>

