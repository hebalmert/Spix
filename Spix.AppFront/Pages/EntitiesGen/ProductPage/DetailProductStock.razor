@page "/products/detailsProductStocks/{Id:guid}"
@attribute [Authorize(Roles = "Usuario")]

@if (Product is null || ProductStocks is null)
{
    <FullScreenSpinner IsVisible=true />
}
else
{
    <div class="container pt-4">
        <div class="card shadow-lg p-4 mb-5" style="border-radius: 12px;">
            <h3 class="mb-4">@Localizer[nameof(Resource.UserRole)]</h3>

            <h3>@Product.ProductName</h3>

            <div class="col-sm-12">
                <div class="row align-items-center mb-3">
                    <div class="col-md-3 d-flex justify-content-start">
                        <AnchorFormBack Style="width:130px" Href="@($"/products/details/{Product.ProductCategoryId}")" />
                    </div>
                </div>
                <br />
            </div>

            <hr />
            <GenericList MyList="ProductStocks">
                <Body>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>@Localizer[nameof(Resource.Product)]</th>
                                    <th>@Localizer[nameof(Resource.Storage)]</th>
                                    <th>@Localizer[nameof(Resource.Stock)]</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ProductStocks!)
                                {
                                    <tr>
                                        <td>@item.Product </td>
                                        <td>@item.ProductStorage!.StorageName</td>
                                        <td>@item.Stock</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </Body>
            </GenericList>
            <!-- Tabla -->
            <hr />
            <!-- Paginación -->
            <Pagination CurrentPage="CurrentPage"
                        SelectedPage="SelectedPage"
                        TotalPages="TotalPages" />
        </div>
    </div>
}