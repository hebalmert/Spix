@page "/products/Editproducts/{Id:guid}"
@attribute [Authorize(Roles = "Usuario")]

@if (Product is null)
{
    <Loading />
}
else
{
    <MudDialog>
        <DialogContent>
            <FormProduct Product="Product"
                         IsEditControl="true"
                         OnSubmit="Edit"
                         ReturnAction="Return" />
        </DialogContent>
    </MudDialog>
}