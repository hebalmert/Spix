@page "/api/accounts/ConfirmEmail"

<div class="d-flex justify-content-center pt-5">
    <div class="card shadow p-4 text-center" style="max-width: 500px; border-radius: 12px;">
        <!-- Ícono decorativo -->
        <div class="mb-3">
            <i class="fa fa-envelope fa-3x text-primary"></i>
        </div>

        <!-- Título -->
        <h3 class="mb-3">@Localizer[nameof(Resource.EmailConfirmation)]</h3>
        <p class="text-muted mb-4">
            @Localizer[nameof(Resource.EmailConfirmationMsg)]
        </p>

        <!-- Botón de acción -->
        <button class="btn btn-dark d-flex align-items-center justify-content-center gap-2" @onclick="ConfirmAccountAsync">
            <i class="fa fa-check"></i>
            @Localizer[nameof(Resource.ButtonConfirmEmail)]
        </button>
    </div>
</div>

