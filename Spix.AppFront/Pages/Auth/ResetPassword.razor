@page "/api/accounts/ResetPassword"
@layout LoginLayout

<div class="d-flex justify-content-center pt-5">
    <div class="card shadow p-4" style="max-width: 500px; border-radius: 12px;">
        <!-- Cabecera -->
        <div class="mb-4 text-center">
            <h5 class="mb-1">
                <i class="fa fa-key me-2 text-dark"></i> @Localizer[nameof(Resource.PasswordChangeTitle)]
            </h5>
            <p class="text-muted mb-0">@Localizer[nameof(Resource.PasswordChangeMsg)]</p>
        </div>

        <EditForm Model="resetPasswordDTO" OnValidSubmit="ChangePasswordAsync">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text" style="width: 150px">
                        @Localizer[nameof(Resource.Email)]
                    </span>
                    <InputText class="form-control" @bind-Value="resetPasswordDTO.Email" />
                </div>
                <ValidationMessage For="@(() => resetPasswordDTO.Email)" />
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text" style="width: 150px">
                        @Localizer[nameof(Resource.UserName)]
                    </span>
                    <InputText class="form-control" @bind-Value="resetPasswordDTO.UserName" />
                </div>
                <ValidationMessage For="@(() => resetPasswordDTO.UserName)" />
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text" style="width: 150px">
                        @Localizer[nameof(Resource.PasswordNew)]
                    </span>
                    <InputText class="form-control" @bind-Value="resetPasswordDTO.NewPassword" />
                </div>
                <ValidationMessage For="@(() => resetPasswordDTO.NewPassword)" />
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text" style="width: 150px">
                        @Localizer[nameof(Resource.PasswordConfirm)]
                    </span>
                    <InputText class="form-control" @bind-Value="resetPasswordDTO.ConfirmPassword" />
                </div>
                <ValidationMessage For="@(() => resetPasswordDTO.ConfirmPassword)" />
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-gradient-primary d-flex align-items-center gap-2" style="width: 48%;">
                    <i class="fa fa-save"></i> @Localizer[nameof(Resource.ButtonSave)]
                </button>
                <a href="/" class="btn btn-gradient-black d-flex align-items-center gap-2" style="width: 48%;">
                    <i class="fa fa-arrow-left"></i> @Localizer[nameof(Resource.ButtonCancel)]
                </a>
            </div>
        </EditForm>
    </div>
</div>
