@typeparam Titem

@if (MyList is null)
{
    if (Loading is not null)
    {
        @Loading
    }
    else
    {
        <Loading />
    }
}
else if (MyList.Count == 0)
{
    if (NoRecords is not null)
    {
        @NoRecords
    }
    else
    {
        <p>No Records Found...</p>
    }
}
else
{
    @Body
}
